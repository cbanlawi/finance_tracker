<h1>Update Expense</h1>

<%= form_with model: @expense, local: true do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.submit "Update Expense" %>
  </p>
<% end %>

<%= link_to "Back", expenses_path %>
